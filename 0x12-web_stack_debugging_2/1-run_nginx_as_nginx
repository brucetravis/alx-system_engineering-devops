#!/usr/bin/env bash
# This script configures Nginx to run as the nginx user and listen on port 8080

# Update Nginx configuration
sed -i 's/user\s*nginx;/user nginx;/' /etc/nginx/nginx.conf

# Modify Nginx default site configuration
sed -i 's/listen\s*80;/listen 8080;/' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart

# Check if Nginx is running as the nginx user
ps auxff | grep 'nginx: master process' | grep -q 'user=nginx' && echo "Nginx is running as nginx user."

# Check if Nginx is listening on port 8080
nc -z 0 8080 && echo "Nginx is listening on port 8080."
