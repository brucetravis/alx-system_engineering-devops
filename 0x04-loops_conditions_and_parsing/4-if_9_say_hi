#!/usr/bin/env bash
# This script displays "Best School" 10 times with a special case on the 9th iteration.

# Initialize a counter
count=0

# Use a while loop to display "Best School" 10 times
while [ $count -lt 10 ]; do
    if [ $count -eq 8 ]; then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    ((count++))
done
